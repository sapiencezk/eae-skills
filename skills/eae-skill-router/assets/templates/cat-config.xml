<?xml version="1.0" encoding="utf-8"?>
<CAT xmlns:xsd="http://www.w3.org/2001/XMLSchema"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     Name="{BlockName}"
     CATFile="{BlockName}\{BlockName}.fbt"
     SymbolDefFile="..\HMI\{BlockName}\{BlockName}.def.cs"
     SymbolEventFile="..\HMI\{BlockName}\{BlockName}.event.cs"
     DesignFile="..\HMI\{BlockName}\{BlockName}.Design.resx"
     Folder=".{Category}"
     xmlns="http://www.nxtcontrol.com/IEC61499.xsd">

  <!-- Sub-CAT for each internal FB that is a CAT block -->
  <SubCAT Name="{subFBInstance}" Type="{SubFBType}" Namespace="{SubFBNamespace}" UsedInCAT="true" />

  <!-- HMI Interface -->
  <HMIInterface Name="IThis" FileName="{BlockName}\{BlockName}_HMI.fbt">
    <Symbol Name="sDefault" FileName="..\HMI\{BlockName}\{BlockName}_sDefault.cnv.cs">
      <DependentFiles>..\HMI\{BlockName}\{BlockName}_sDefault.cnv.Designer.cs</DependentFiles>
      <DependentFiles>..\HMI\{BlockName}\{BlockName}_sDefault.cnv.resx</DependentFiles>
      <DependentFiles>..\HMI\{BlockName}\{BlockName}_sDefault.cnv.xml</DependentFiles>
    </Symbol>
    <MetaFile>{BlockName}\{BlockName}_HMI.meta.xml</MetaFile>
  </HMIInterface>

  <!-- Plugin configurations -->
  <Plugin Name="Plugin=OfflineParametrizationEditor;IEC61499Type=CAT_OFFLINE;$ItemType$=Content"
          Project="{BaseProject}" Value="{BlockName}\{BlockName}_CAT.offline.xml" />
  <Plugin Name="Plugin=OPCUAConfigurator;IEC61499Type=CAT_OPCUA;$ItemType$=Content"
          Project="{BaseProject}" Value="{BlockName}\{BlockName}_CAT.opcua.xml" />

  <HWConfiguration xsi:nil="true" />
</CAT>
